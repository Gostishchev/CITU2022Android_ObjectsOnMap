<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitias.CActivityObjectInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/InputName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/MarginSize5"
            android:layout_marginTop="@dimen/MarginSize5"
            android:layout_marginEnd="@dimen/MarginSize5"
            android:layout_marginBottom="@dimen/MarginSize5"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry" />

        <EditText
            android:id="@+id/InputDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/MarginSize5"
            android:layout_marginTop="@dimen/MarginSize5"
            android:layout_marginEnd="@dimen/MarginSize5"
            android:layout_marginBottom="@dimen/MarginSize5"
            android:layout_weight="1"
            android:background="@color/white"
            android:inputType="text"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>